<div class="container" id="container">
    <div class="jumbotron" id="header">
    <h1 id="eat">Eat-Da-Burger!</h1>
    <img src="/assets/img/burger.png" id="burger_picture">
</div>
<div class="not_devoured">
  <h3>HURRY UP! EAT ME!</h3>
<ul class="list-group">
	{{#each burgers}}
	{{#unless this.devoured}}
  <li>
			<form class="input-group">
			<p>{{this.id}} {{this.burger_name}} </p>
				<button class="devour-burger" type="submit" data-id="{{this.id}}">OM NOM NOM!</button>
			</form>
  </li>
	{{/unless}}
	{{/each}}
</ul>
</div>

<div class="devoured">
	<h3 id="right-column">YUMMY, WAS DELICIOUS!</h3>
	<div>
				<ul>
				{{#each burgers}}
					{{#if this.devoured}}
					<li>
						<p class="lead">{{this.burger_name}} </p>
					</li>
					{{/if}}
				{{/each}}
				</ul>
	</div>
</div>

<h2>Enter burger you want to order and click "Order Me!" button</h2>
<form class="create-form">

  <div class="form-group">
    <input type="text" id="br" name="burger_name" autofocus>
  </div>
  <div class="form-group">
    <input type="hidden" name="devoured" value="true">
  </div>
  <button type="submit" id="order-btn" class="f-group">Order Me!</button>

</form>
